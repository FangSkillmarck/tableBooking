<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>{{{title}}}</title>
    <link href="/static/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/static/style.css" type="text/css">
    <script src="/static/bootstrap.min.js"></script>
    <script src="/static/script.js"></script>
	{{!-- <script type="text/javascript">
			$(function () {
				$('form *').autosave();
			});
	</script> --}}
    <script  type="text/javascript">
            function store(){
                var inputEmail= document.getElementById("email");
                localStorage.setItem("email", inputEmail.value);
                }
</script>
</head>
<body>
    <nav class="navbar navbar-dark bg-primary">
        <a class="navbar-brand" href="#">Express Form Data Validation</a>
    </nav>

    {{#if showTitle}}
    {{title}}
     {{/if}}
 
     <div class="container">
        <div class="col-md-12">
            {{# if errors }}
            <strong>Error submitting the form.</strong> Please correct the errors below.
            {{# each errors }}
            <p class="alert alert-danger"> {{ this.msg }}</p>
            {{/each}}
            {{/if}}

            <h1>Book table</h1>
            <form id="infoForm" action="/submit" method="POST">
            <table>
                    <tr>
                        <td><div class="form-group"></div>
                            <label for="firstName"> First name*:</label> <br>
                            <input type="text" required class="form-control" name="firstName"  id="firstName"  >
                            </div>
                        </td>
                        <td><div class="form-group"></div>
                            <label  for="lastName"> Last name*:</label> <br>
                            <input type="text" required class="form-control" name="lastName"  id="lastName" >
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label  for="amount"> Number of persons (max 20)*:</label> <br>
                            <input type="number" required class="form-control" name="amount" id="amount" min="1" max="20">
                        </td>
                        <td>
                            <label  for="type">Type: </label>  <br>
                            Business 
                            <input type="radio" name="type"  id="type"  value="business">  <br>
                            Private
                            <input type="radio" name="type"  id="type" value="private" checked>  <br>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label  for="mail">Email*: </label><br>
                            <input type="text" required class="form-control" name="mail" id="mail">
                        </td>
                        <td>
                            <label  for="phoneNumber">Phone*: </label><br>
                            <input type="text" required class="form-control" name="phoneNumber" id="phoneNumber">
                        </td>
                    </tr>
                    <tr>
                        <td>
                             <label  for="arrival">Arrival (between 10:00 and 23:00)*:</label><br>
                            <input type="text" required class="form-control" name="arrival" id="arrival" min="10:00:00" max="23:00:00">
                        </td>
                        <td>
                             <label  for="departure">Departure (between 10:00 and 23:00)*:</label><br>
                            <input type="text" required class="form-control" name="departure" id="departure" min="10:00:00" max="23:00:00">
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            Comment:<br>
                            <textarea name="comment" class="form-control" rows="10" cols="50"></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <a id="submit" onclick="store()" class="button" href="#">Book</a>
                            <a id="reset" class="button" href="#">Cancel</a>
                        </td>
                    </tr>
                </table>
                <p>* - Required fields</p>
            </form>
         </div>
    </div>
</body>
</html>
